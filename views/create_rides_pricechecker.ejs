    <div class="page-body">
        <div class="container">
            <div class="card card-nav-tabs">
                <div class="card-header card-header-danger">
                    <strong>ADVERTISE RIDE</strong>
                </div>
                <div class="card-body">
                    <div class="card">
                        <form id="check-price-form" method="POST" action="create_rides_pricechecker" class="card-body">
                            <h4 class="card-title">Check Current Price</h4>
                            <p class="card-text">Input origin and destination to check current prevalent price</p>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="originPrice">Origin</label>
                                    <input type="text" class="form-control" id="originPrice" name="originPrice"
                                        placeholder="Start destination">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="destinationPrice">Destination</label>
                                    <input type="text" class="form-control" id="destinationPrice"
                                        name="destinationPrice" placeholder="End destination">
                                </div>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Min</th>
                                        <th scope="col">Max</th>
                                        <th scope="col">Average</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><%= data[0].min%></td>
                                        <td><%= data[0].max%></td>
                                        <td><%= data[0].avg%></td>
                                    </tr>
                                </tbody>
                            </table>
                            <button type="submit" class="btn btn-primary">Check Price</button>
                        </form>
                    </div>
                    <form id="create-rides-form" method="POST" action="create_rides">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="origin">Origin</label>
                                <input type="text" class="form-control" id="origin" name="origin"
                                    placeholder="Start destination">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="destination">Destination</label>
                                <input type="text" class="form-control" id="destination" name="destination"
                                    placeholder="End destination">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="date">Date</label>
                                <input type="date" class="form-control" id="date" name="date"
                                    placeholder="Date of the ride">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="time">Time</label>
                                <input type="time" class="form-control" id="time" name="time" placeholder="time">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="price">Price</label>
                                <input type="number" step="0.01" class="form-control" id="price" name="price"
                                    placeholder="Set Price for the ride">
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
